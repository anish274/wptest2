{
  "version": 2,
  "builds": [
    { "src": "wp-config.php", "use": "@now/wordpress" }
  ],
  "routes": [
    { "src": "/wp-admin/?", "dest": "index.php" },
    { "src": ".*\\.php$", "dest": "index.php" }
  ],
  "env": {
    "DB_NAME": "@wp_db_name",
    "DB_USER": "@wp_db_user",
    "DB_PASSWORD": "@wp_db_password",
    "DB_HOST": "@wp_db_host"
  }
}